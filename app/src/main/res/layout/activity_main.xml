<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="mainModel"
            type="com.xhbb.qinzl.pleasantnote.viewmodel.MainModel"/>
    </data>

    <!--suppress AndroidUnknownAttribute -->
    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <include
            layout="@layout/activity_fragment"
            app:bottomFragmentHeight="@{@dimen/bottomPlayFragmentHeight}"
            app:drawerLayout="@{drawerLayout}"/>

        <!--suppress AndroidUnknownAttribute -->
        <android.support.design.widget.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:checkedItem="@{@id/menu_popular_song}"
            android:fitsSystemWindows="true"
            android:onItemSelected="@{(item)->mainModel.onItemSelected(item,drawerLayout,navigationView)}"
            app:headerLayout="@layout/drawer_main"
            app:menu="@menu/drawer_ranking"/>
    </android.support.v4.widget.DrawerLayout>
</layout>