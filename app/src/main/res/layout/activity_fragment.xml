<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activityFragment"
            type="com.xhbb.qinzl.pleasantnote.layoutbinding.ActivityFragment"/>

        <variable
            name="drawerLayout"
            type="android.support.v4.widget.DrawerLayout"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <!--suppress AndroidUnknownAttribute -->
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:actionBarSetted="@{true}"
                android:drawerLayout="@{drawerLayout}"
                android:onDrawerOpened="@{()->activityFragment.onDrawerOpened()}"
                app:layout_scrollFlags="scroll"/>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@{activityFragment.bottomFragmentHeight}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <FrameLayout
            android:id="@+id/bottom_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/bottom_sheet_behavior"/>
    </android.support.design.widget.CoordinatorLayout>
</layout>